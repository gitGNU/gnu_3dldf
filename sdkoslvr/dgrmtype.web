        << endl
        << "-  - - - - - - - - - "
        << endl;

   for (int i = 0; i < 9; ++i)
   {

      cerr << i << "| ";

      for (int j = 0; j < 9; ++j)
      {
   
          if (diagram[i][j].ctr == 1)
          {
             diagram[i][j].output(i, j, full, false);
             cerr << " ";
          }
          else 
             cerr << "-" << " ";

      }
      cerr << endl;

   }  /* |for|  */   

   return 0;

}  /* End of |Diagram_Type::output| definition */


