int 
Field_Type::output(int i, int j, bool full, string *out_str)
{
    string s;

    stringstream temp_strm;


    if (full)
    {
       temp_strm << "[" << i << "][" << j << "]"
            << endl;
       s = " ";
    }

    if (bit_field & 2U)
        temp_strm << "1" << s;
    if (bit_field & 4U)
        temp_strm << "2" << s;
    if (bit_field & 8U)
        temp_strm << "3" << s;
    if (bit_field & 16U)
        temp_strm << "4" << s;
    if (bit_field & 32U)
        temp_strm << "5" << s;
    if (bit_field & 64U)
        temp_strm << "6" << s;
    if (bit_field & 128U)
        temp_strm << "7" << s;
    if (bit_field & 256U)
        temp_strm << "8" << s;
    if (bit_field & 512)
        temp_strm << "9" << s;

    if (full)
       temp_strm << endl << endl;

    if (out_str)
       *out_str = temp_strm.str();
    else
       cerr << temp_strm.str();

   return 0;

}

