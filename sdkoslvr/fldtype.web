class Field_Type
{
   friend int main(int, char *[]);

   int ctr;
   unsigned int bit_field;

   public:

   static int set_field_ctr;

   Field_Type(void);

   void show(string s = "");

   void set(unsigned int); 

   int check(int ii, int jj);

   int output(int i, int j, bool full = true, string *out_str = 0);

   static int output(Field_Type f[9][9], bool tex = false, string filename = "");


};

